<UserControl x:Class="WpfApplication5.UserCont"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApplication5"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Button Content="Button" HorizontalAlignment="Left" Margin="33,166,0,0" VerticalAlignment="Top" Width="75" Background="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:UserCont}}, Path=Color}"/>
    </Grid>
</UserControl>
