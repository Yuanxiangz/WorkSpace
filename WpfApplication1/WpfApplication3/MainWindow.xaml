<Window x:Class="WpfApplication3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:infEx="clr-namespace:Eze.InfragisticsEx;assembly=Eze.InfragisticsEx"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <infEx:EzeGrid Grid.Row="1"
                       Grid.Column="0"
                       Margin="0,2,0,0"
                       AllowAddNew="False"
                       AllowDelete="False" 
                       Layouts="{Binding SelectedLayout, Mode=TwoWay}">
            <infEx:EzeColumn AllowEdit="False" Key="Position"/>
        </infEx:EzeGrid>
    </Grid>
</Window>
